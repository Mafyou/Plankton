<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Whale.Maui.ViewModels"
             xmlns:obj="clr-namespace:Whale.Maui.DisplayObjects"
             x:DataType="vm:MainVM"
             x:Class="Whale.Maui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Imagine a whale who is hungry!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Feed me!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to Plankton Game!"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to Plankton Game!"
                FontSize="18"
                HorizontalOptions="Center" />

            <Label
                Text="Number of feeds:"
                FontSize="16"
                HorizontalOptions="Center" />

            <Entry
                Text="{Binding NumberOfFeeds}"
                Keyboard="Numeric"
                Placeholder="Enter number of feeds"
                HorizontalOptions="Center"
                WidthRequest="200" />

            <Button
                Text="{Binding Status, Mode=TwoWay}"
                Command="{Binding UpdateStatusCommand, Mode=TwoWay}"
                SemanticProperties.Hint="Enable the race to feed our Whale"
                HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding FeedResults}" 
                      IsVisible="{Binding HasResults}"
                      HeightRequest="300"
                      HorizontalOptions="Fill">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="obj:FeedResultItem">
                        <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0" Text="{Binding Position, StringFormat='#{0}'}" FontAttributes="Bold" />
                            <Label Grid.Column="1" Text="{Binding Kind}" HorizontalOptions="Center" />
                            <Label Grid.Column="2" Text="{Binding Count, StringFormat='{0} plankton'}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>